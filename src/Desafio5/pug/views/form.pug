html
    head 
        title='Cargar producto'
        link(rel='stylesheet' href='/css/form.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
    body 
        main
            div(class='container')
                div(class='row')
                    div(class='col-12')
                        h1(class='form__title mt-3 mb-3')='Registrar un producto'
                div(class='row')
                    div(class='col-12')
                        form(action='/productos' method='POST')
                            div(class='row input-group align-items-center')
                                div(class='col-12 col-lg-4')
                                    label(for='title')='Nombre:'
                                div(class='col-12 col-lg-8')
                                    input(id='title' name='title' type='text' maxlength='50' required='true')
                            div(class='row input-group align-items-center')
                                div(class='col-12 col-lg-4')
                                    label(for='price')='Precio Unitario:'
                                div(class='col-12 col-lg-8')
                                    input(id='price' name='price' type='number' min='0' required='true')
                            div(class='row input-group align-items-center')
                                div(class='col-12 col-lg-4')
                                    label(for='thumbnail')='URL de Imagen:'
                                div(class='col-12 col-lg-8')
                                    input(id='thumbnail' name='thumbnail' type='text' required='true')
                            input(class='submit' type='submit' value='Enviar')
                div(class='row')
                    div(class='col-12 d-flex justify-content-center mt-3 mb-3')
                        a(href='/productos')
                            button(type='button' class='btn btn-primary')='Ver productos'
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')