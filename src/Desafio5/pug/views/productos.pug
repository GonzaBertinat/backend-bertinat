html
    head 
        title='Productos'
        link(rel='stylesheet' href='/css/productos.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
    body 
        main
            div(class='container')
                div(class='row')
                    div(class='col-12')
                        h1(class='mt-3 mb-3')='Listado de Productos'
                if products.length > 0
                    div(class='productos')
                        div(class='productos__header')
                            div(class='row')
                                div(class='col-4 d-flex justify-content-center')
                                    span='Nombre'
                                div(class='col-4 d-flex justify-content-center')
                                    span='Precio'
                                div(class='col-4 d-flex justify-content-center')
                                    span='Foto'
                        div(class='productos__content') 
                            ul 
                                each product in products
                                    li(class='producto')
                                        div(class='row')
                                            div(class='col-4 d-flex align-items-center')
                                                span(class='producto__title')=product.title
                                            div(class='col-4 d-flex justify-content-center align-items-center')
                                                span $ #{product.price} 
                                            div(class='col-4 d-flex justify-content-center align-items-center')
                                                div(class='producto__image')
                                                    img(src=product.thumbnail alt=product.title)
                else 
                    div(class='row')
                        div(class='col-12 productos__empty')  
                            h2='NO HAY PRODUCTOS'                
                div(class='row')
                    div(class='col-12 d-flex justify-content-center mt-3 mb-3')
                        a(href='/')
                            button(type='button' class='btn btn-primary')='Cargar Producto'
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
